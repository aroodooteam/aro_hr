                                    <field name="bank_id" />
                                    <field name="state" />
                                </group>
                            </form>
                            <tree>
                                <field name="name"/>
                                <field name="rate"/>
                                <field name="bank_account_id"/>
                                <field name="bank_id"/>
                                <field name="state"/>
                            </tree>
                        </field>
                        <!--<separator string="Prêts"/>
                        <group>
                        <field name="loan" nolabel="1"/>
                        </group>                -->
                    </page>
                    <!--page string="Sanctions" attrs="{'invisible':[('visible','=',False)]}">
                        <field colspan="4" name="sanction_ids" nolabel="1" context="{'default_name': active_id}">
                            <tree>
