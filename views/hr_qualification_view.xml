        <record model="ir.ui.view" id="view_hr_employee_qualification_tree">
            <field name="name">hr.employee.qualification.tree</field>
            <field name="model">hr.employee.qualification</field>
            <field name="type">tree</field>
            <field name="priority">0</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="matricule"/>
                    <field name="job_id"/>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="specialite"/>
                    <field name="branche_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hr_employee_qualification_search">
            <field name="name">hr.employee.qualification.search</field>
            <field name="model">hr.employee.qualification</field>
            <field name="type">search</field>
            <field name="priority">0</field>
            <field name="arch" type="xml">
                <search>
                    <field name="matricule"/>
                    <field name="job_id"/>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="specialite"/>
                    <field name="branche_id"/>
                </search>
            </field>
        </record>


